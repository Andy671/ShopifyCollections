    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CollectionsActivity">

    <fragment
        android:id="@+id/fragment_collection_list"
        android:name="com.andy671.shopifycollections.ui.CollectionListFragment"
        android:layout_width="match_parent"
